#!/bin/bash

TEMP=$(getopt -o rd --long reverse,delete -n $(basename $0) -- "$@")
reverse=false
delete=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -r|--reverse)
            reverse=true
            shift 1
            ;;
        -d|--delete)
            delete=-d
            shift 1
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

if test "$1" = -r; then
    reverse=true
    shift
fi

function die() {
    echo Error: "$@"
    exit -1
}

host=$1
shift

ssh $host mkdir -p "$(up .)"
if test "$reverse" = true; then
    for x in "$@"; do
        my-rsync -av $host:$(up .)/$(basename $x) $(dirname $x) --exclude .git --exclude "*#*" --exclude ".#*"
    done
else
    my-rsync -av "$@" $host:$(up .) --exclude .git --exclude "*#*" --exclude ".#*" -d
fi
