#!/bin/bash
sleep 1

function die() {
    echo Error: "$@"
    exit -1
}

select=-s

case "$1" in
    current|-c)
        shift;
        select=-u
        ;;
    full|-f)
        shift;
        select=-m
        ;;
    selected|-s)
        shift;
        ;;
    *)
        out=$1
        shift
        ;;
esac

if test "$1"; then
    if test "$out"; then
        die "Error: 2 out args seen"
    fi
fi

if test ! "$out"; then
    now=`now|perl -npe 's/:/./g'`
    mkdir -p ~/shots
    now=shots/"$now"
    out=~/"$now".png
fi
while true; do
    scrot $select "$out"
    if test -e "$out"; then
        of "$out"
        mp "$out" | putclip
        exit 0
    fi
    sleep 1
done
