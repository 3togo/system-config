#!/bin/bash

boot=
TEMP=$(getopt -o b: --long boot: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -b|--boot)
            boot=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

set -e

function die() {
    echo Error: "$@"
    exit -1
}

if test ! -e "$boot"; then
    die "boot image $boot not found"
fi
echo boot image is $boot

boot=$(readlink -f $boot)
tmpd=/tmp/$(basename $0).$$
mkdir $tmpd
(
    cd $tmpd
    cp $boot $(basename $boot)
    unbootimg $(basename $boot)
)
replace-ramdisk -r $tmpd/ramdisk.img "$@"
(
    cd $tmpd
    bash -e mkbootimg.sh
    cp $(basename $boot) $boot
)
