#!/bin/bash
set -e

[[ "$1" =~ .zip$ ]]
FILE=`readlink -f "$1"`
DIR=${FILE}
if test "$2"; then
    DIR=$(readlink -m "$2")
else
    DIR=$(basename "$DIR").$$
fi

mkdir -p "$DIR"

TD=/tmp/$$.gbkunzip
mkdir $TD

(
    cd $TD

    LANG=C LC_ALL=C 7z x "$FILE" >/dev/null 2>&1
    convmv -f gbk -t utf8 -r --notest -- * >/dev/null 2>&1
)
cp $TD/* "$DIR" -va
rm $TD -rf
