#!/bin/bash

if test "$GERRIT_HOST"; then
    host=$GERRIT_HOST
elif test "${1:0:1}" != -; then
    host=$(repo-review-host)
fi

TEMP=$(getopt -o h: --long host: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -h|--host)
            host=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

if test -z "$host"; then
    host=$(repo-review-host)
fi

if test -z "$host"; then
    host=$(xmlstarlet sel -B -t -m //default -v @review -n -b $(lookup-file .repo/manifest.xml) | perl -npe 's,.*://,,')
fi
if test -z "$host"; then
    host=bibler
fi

if test "$BPE_ON_APSE"; then
    host=bibler
fi

if test "$1" = clone; then
    shift
    git clone $host:$@
else
    ssh $host gerrit "$@"
fi
