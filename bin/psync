#!/bin/bash

if test "$1" = -r; then
    reverse=true
    shift
fi

function die() {
    echo Error: "$@"
    exit -1
}

host=$1
shift

ssh $host mkdir -p "$(up .)"
if test "$reverse" = true; then
    for x in "$@"; do
        my-rsync -av $host:$(up .)/$(basename $x) $(dirname $x) --exclude .git --exclude "*#*" --exclude ".#*"
    done
else
    my-rsync -av "$@" $host:$(up .) --exclude .git --exclude "*#*" --exclude ".#*"
fi
