#!/bin/bash

adb shell screencap /sdcard/screen.png

if test "$1"; then
    adb pull /sdcard/screen.png /tmp/android-screen.$$.png
    convert /tmp/android-screen.$$.png "$1"
    rm /tmp/android-screen.$$.png
    exit
fi
now=`now|perl -npe 's/:/./g'`
mkdir -p ~/shots
now=shots/"$now"
adb pull /sdcard/screen.png ~/"$now".png
of ~/"$now".png
mp ~/"$now".png | putclip

