#!/bin/bash
# use evtest to see key code for keymap
sudo su - bhj -c "
   . ~/.renew-xauth

   (
       (
           flock -n 9 || exit
           sleep 1
           xmodmap ~/system-config/etc/hardware-mach/generic/.Xmodmap || true
           xmodmap ~/system-config/etc/hardware-mach/generic/.Xmodmap || true
           xmodmap -e 'keycode 197 = F23'
           xmodmap -e 'keycode 202 = F24'
           ~/bin/do-keymap
       )&
       date
   ) 2>&1 9> ~/.logs/re-xmodmap.lock | tee -a ~/.logs/re-xmodmap.log
"
