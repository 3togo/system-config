#!/bin/bash
set -e

prompt=
TEMP=$(getopt -o p: --long prompt: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -p|--prompt)
            prompt=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

test $# = 0 -o $# = 1
tmp=/tmp/`basename $0`.$$
if test "$USE_BUFFER_NAME"; then
    tmp=/tmp/$USE_BUFFER_NAME
fi
touch $tmp

if test "$prompt"; then
    cat <<EOF > $tmp

###start of comment###
"$prompt"
EOF
elif tty >/dev/null 2>&1 || test $# = 1; then
    test $# = 1 -a "$1" != $tmp && cat $1 > $tmp
else
    cat > $tmp
fi

echo -n Edit it... 1>&2
edit-wait $tmp >/dev/null 2>&1
echo " done" 1>&2
function get-rid-of-comment() {
    cat "$@" | perl -ne '
if (m/###start of comment###/) { $comment = 1; }
if (not $comment) { print }
'
}
if test "`get-rid-of-comment $tmp | wc -w`" == 0; then
    if EMACS=t yes-or-no-p -y "Error: input can not be empty, try again?"; then
        exec get-stdin $tmp
    fi
fi
get-rid-of-comment $tmp

rm $tmp
