#!/bin/bash
if test $(basename $0) = adb-browse-with-firefox; then
    mod=org.mozilla.firefox/.App
elif test $(basename $0) = adb-browse-with-chrome; then
    mod=com.android.chrome/com.google.android.apps.chrome.Main
elif test $(basename $0) = adb-browse-with-weibo; then
    mod=com.sina.weibo/.WeiboBrowser\ -d
elif test $(basename $0) = adb-browse-with-wx; then
    mod=com.tencent.mm/.plugin.webview.ui.tools.WebViewUI
fi

adb shell am start -n $mod "${1:-$(getclip)}"
