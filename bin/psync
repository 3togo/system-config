#!/bin/bash

TEMP=$(getopt -o rdc --long reverse,delete,checksum -n $(basename $0) -- "$@")
reverse=false
delete=
checksum=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -r|--reverse)
            reverse=true
            shift 1
            ;;
        -d|--delete)
            delete=--delete
            shift 1
            ;;
        -c|--checksum)
            checksum=--checksum
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

if test "$1" = -r; then
    reverse=true
    shift
fi

function die() {
    echo Error: "$@"
    exit -1
}

host=$1
shift

ssh $host mkdir -p "$(up .)"
if test -e psync-exclude.rc -a -z "$delete"; then
    local_exclude='--exclude-from psync-exclude.rc'
else
    local_exclude=
fi
if test "$reverse" = true; then
    for x in "$@"; do
        my-rsync $checksum -av $host:$(up .)/$(basename $x) $(dirname $x) --exclude .git --exclude "*#*" --exclude ".#*" $local_exclude
    done
else
    my-rsync $checksum -av "$@" $host:$(up .) --exclude .git --exclude "*#*" --exclude ".#*" $delete $local_exclude
fi
