#!/bin/bash

tmpf=/tmp/$(basename $0).$$
set -e
mkdir -p ~/tmp
(
    trap 'echo shit' SIGINT;
    strace -e trace=open,execve -f -q -o $tmpf "$@" 2>&1 | tee $tmpf.out
)

cat $tmpf

# perl -npe '@x = split(/"/); $_ = $x[1] . "\n"' -i $tmpf

# perl -ne 'if (m/^[0-9a-f]{32}  (.*)/) {system("readlink", "-f", "$1")}' -i $tmpf
sort -u $tmpf | xargs -d '\n' bash -c 'for x in "$@"; do test -f $x && md5sum $x || echo $x; done' true > $tmpf.bak
mv $tmpf.bak $tmpf
edit-wait $tmpf
test $(whoami) = root || rm $tmpf
