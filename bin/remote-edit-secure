#!/bin/bash
set -x
file=$(echo "$SSH_ORIGINAL_COMMAND" | grep '^emacsclient '|tail -n 1|perl -npe 's/^emacsclient +(-n +)?(\+1 +)?//;')

wait=
if echo "$SSH_ORIGINAL_COMMAND" | grep '^emacsclient +-n +' -P -q; then
    wait=-n
fi

if test "$file"; then
    file=${file%\'};
    file=${file#\'};
    emacsclient $wait "$file"
else
    echo "What do you want to edit?"
fi
