#!/usr/bin/env ruby
x = open("|wget 'http://buc.alibaba-inc.com/rpc/enhancedUserQuery/findUsers/byFuzzyQuery.json?fuzzyStr=#{ARGV[0]}' -O - 2>/dev/null") {|pipe| pipe.read};

require 'json'
x = JSON.parse(x)
if x
  x = x['content']
end

x = x['items'] if x

if x
  x.each {|j|
    print "**************** split ****************\n"
    j.each {|k, v|
      print "#{k} -> #{v}\n" unless v.to_s.empty?
      if k == 'empId'
        system("ali-view-photo #{v}")
      end
    }
  }
end
